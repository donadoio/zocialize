// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastSocketId String?

  username          String          @unique
  usernameLowercase String          @unique
  email             String          @unique
  confirmed         Boolean         @default(false)
  hash              String
  avatar            String          @default("default")
  profileColor      String          @default("default")
  refreshTokenHash  String?
  friends           Friend[]        @relation("friend")
  friendRequests    FriendRequest[] @relation("friendRequest")
  blocked           Blocked[]       @relation("blocked")

  @@map("users")
}

model Friend {
  userFriend User   @relation("friend", fields: [userId], references: [id])
  userId     Int
  username   String

  @@id([userId])
}

model FriendRequest {
  userFriendRequest User   @relation("friendRequest", fields: [userId], references: [id])
  userId            Int
  username          String

  @@id([userId])
}

model Blocked {
  userBlocked User   @relation("blocked", fields: [userId], references: [id])
  userId      Int
  username    String

  @@id([userId])
}
